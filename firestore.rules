/**
 * @fileoverview Firestore Security Rules for BeautyFlow application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model, where each professional can only
 * access data associated with their own account.  This is achieved through
 * path-based access control, where the `professionalId` in the path must match the
 * authenticated user's UID.
 *
 * Data Structure:
 * The Firestore database is organized hierarchically under the `/professionals/{professionalId}`
 * path.  Each professional has their own subcollections for clients, services, and appointments.
 *
 * Key Security Decisions:
 * - Professionals can only manage their own data. There are no global admin roles.
 * - Data consistency is enforced by requiring the 'professionalId' in subcollection
 *   documents to match the `professionalId` in the path.
 *
 * Denormalization for Authorization:
 * The 'professionalId' is included in Client, Service, and Appointment documents to
 * avoid costly `get()` calls in security rules.  This denormalization allows
 * rules to efficiently verify ownership without additional database reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to professional profile data.
     * @path /professionals/{professionalId}
     * @allow (create) - A user can create their own professional profile if the UID matches the professionalId.
     * @allow (get, list, update, delete) - A user can only access their own professional profile.
     * @deny (create) - A user cannot create a professional profile with an ID that does not match their own UID.
     * @deny (update, delete) - A user cannot modify or delete another professional's profile.
     * @principle Enforces document ownership based on the professionalId in the path.
     */
    match /professionals/{professionalId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(professionalId) {
        return isSignedIn() && request.auth.uid == professionalId;
      }

      function isExistingOwner(professionalId) {
        return isOwner(professionalId) && exists(/databases/$(database)/documents/professionals/$(professionalId));
      }

      // Anyone can read a professional profile (e.g., for public pages, not used yet)
      // But only the owner can create, update, or delete.
      allow get: if true;
      allow list: if false; // List reading is disabled for security.
      allow create: if isOwner(professionalId);
      allow update: if isOwner(professionalId);
      allow delete: if isOwner(professionalId);
    }

    /**
     * @description Controls access to client data for each professional.
     * @path /professionals/{professionalId}/clients/{clientId}
     * @allow (create) - A professional can create a client under their ID.
     * @allow (get, list, update, delete) - A professional can only access clients under their ID.
     * @deny (create) - A professional cannot create a client under another professional's ID.
     * @deny (update, delete) - A professional cannot modify or delete another professional's client.
     * @principle Enforces document ownership through path and data-level checks.
     */
    match /professionals/{professionalId}/clients/{clientId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(professionalId) {
        return isSignedIn() && request.auth.uid == professionalId;
      }

      function isExistingOwner(professionalId) {
        return isOwner(professionalId) && exists(/databases/$(database)/documents/professionals/$(professionalId)/clients/$(clientId));
      }

      allow get: if isOwner(professionalId);
      allow list: if isOwner(professionalId);
      allow create: if isOwner(professionalId) && request.resource.data.professionalId == professionalId;
      allow update: if isOwner(professionalId) && request.resource.data.professionalId == resource.data.professionalId;
      allow delete: if isOwner(professionalId);
    }

    /**
     * @description Controls access to service data for each professional.
     * @path /professionals/{professionalId}/services/{serviceId}
     * @allow (create) - A professional can create a service under their ID.
     * @allow (get, list, update, delete) - A professional can only access services under their ID.
     * @deny (create) - A professional cannot create a service under another professional's ID.
     * @deny (update, delete) - A professional cannot modify or delete another professional's service.
     * @principle Enforces document ownership through path and data-level checks.
     */
    match /professionals/{professionalId}/services/{serviceId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(professionalId) {
        return isSignedIn() && request.auth.uid == professionalId;
      }
      
      function isExistingOwner(professionalId) {
        return isOwner(professionalId) && exists(/databases/$(database)/documents/professionals/$(professionalId)/services/$(serviceId));
      }

      allow get: if isOwner(professionalId);
      allow list: if isOwner(professionalId);
      allow create: if isOwner(professionalId) && request.resource.data.professionalId == professionalId;
      allow update: if isOwner(professionalId) && request.resource.data.professionalId == resource.data.professionalId;
      allow delete: if isOwner(professionalId);
    }

    /**
     * @description Controls access to appointment data for each professional.
     * @path /professionals/{professionalId}/appointments/{appointmentId}
     * @allow (create) - A professional can create an appointment under their ID.
     * @allow (get, list, update, delete) - A professional can only access appointments under their ID.
     * @deny (create) - A professional cannot create an appointment under another professional's ID.
     * @deny (update, delete) - A professional cannot modify or delete another professional's appointment.
     * @principle Enforces document ownership through path and data-level checks.
     */
    match /professionals/{professionalId}/appointments/{appointmentId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(professionalId) {
        return isSignedIn() && request.auth.uid == professionalId;
      }
      
      function isExistingOwner(professionalId) {
        return isOwner(professionalId) && exists(/databases/$(database)/documents/professionals/$(professionalId)/appointments/$(appointmentId));
      }

      allow get: if isOwner(professionalId);
      allow list: if isOwner(professionalId);
      allow create: if isOwner(professionalId) && request.resource.data.professionalId == professionalId;
      allow update: if isOwner(professionalId) && request.resource.data.professionalId == resource.data.professionalId;
      allow delete: if isOwner(professionalId);
    }

    /**
     * @description Controls access to activation tokens.
     * @path /activationTokens/{tokenId}
     * @allow (get) - Any authenticated user can check if a token exists.
     * @allow (list, create) - Only the admin user can create and list tokens.
     * @allow (update) - Any authenticated user can update a token to use it, but only if it hasn't been used before.
     * @deny (delete) - Tokens cannot be deleted.
     */
    match /activationTokens/{tokenId} {
        function isSignedIn() {
            return request.auth != null;
        }

        // IMPORTANT: Replace with your actual Admin User UID
        function isAdmin() {
            return isSignedIn() && request.auth.uid == 'fE4wQQun2zgDr39cwH0AKoOADkT2';
        }
        
        // Allow any signed-in user to read a token document to check its status.
        allow get: if isSignedIn();
        
        // Allow admin to list and create tokens.
        allow list, create: if isAdmin();
        
        // Allow a user to 'claim' an unused token.
        // - User must be signed in.
        // - The token must not be used.
        // - The incoming data must mark the token as used.
        // - The incoming data must set the 'usedBy' field to the user's own UID.
        allow update: if isSignedIn() 
                      && resource.data.isUsed == false
                      && request.resource.data.isUsed == true
                      && request.resource.data.usedBy == request.auth.uid;
        
        allow delete: if false; // Tokens should not be deletable
    }
  }
}
